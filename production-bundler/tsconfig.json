{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es2023","dom"],
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./dist",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["dist", "node_modules"]
}